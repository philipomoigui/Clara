@model UserProfileViewModel

@{ 
    Layout = "_PagesLayout";

 }

<section class="py-5">
    <div class="container">
        <!-- Breadcrumbs -->
        <ol class="breadcrumb pl-0  justify-content-start">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Account" asp-controller="User">Account</a></li>
            <li class="breadcrumb-item active">Bookmarks </li>
        </ol>
        <div class="row">
            <div class="col-lg-12 pl-lg-5">
                <h1 class="hero-heading mb-0 text-center">HEY @Model.FirstName!</h1>
                <div class="text-block text-center">
                    <h5 id="main-text" class="text-muted">Here Are Your Currently Bookmarked Services <i class="fa fa-heart text-danger aria-hidden=" true""></i></h5>
                    @*<p class="text-muted">.......</p>*@
                </div>
                <div class="text-block">
                    <h4 class="mb-5">@Model.FirstName's BookMarks</h4>
                    <div class="row">
                        @if (Model.Bookmarks.Count == 0)
                        {
            <p>You have No services Bookmarked at them moment</p> }
        else
        {
            foreach (var bookmark in Model.Bookmarks)
            { <!-- place item-->

                                    <div class="col-sm-6 col-xl-4 mb-5 hover-animate" data-marker-id="59c0c8e33b1527bfe2abaf92">
                                        <div class="card border-0 shadow">
                                            <div class="card-img-top overflow-hidden dark-overlay bg-cover">
                                                <img src="~/img/listing/list-4.jpg" class="card-img" alt="Alternate Text" />
                                                <a class="tile-link" asp-action="Details" asp-controller="Service" asp-route-serviceId="@bookmark.Service.ServiceId" asp-route-categoryId="@bookmark.Service.CategoryId"></a>
                                                <div class="card-img-overlay-bottom z-index-20">
                                                    <h4 class="text-white text-shadow">@bookmark.Service.BusinessName</h4>
                                                    <p class="mb-2 text-xs">
                                                        <i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-gray-300">                    </i>
                                                    </p>
                                                </div>
                                                <div class="card-img-overlay-top d-flex justify-content-between align-items-center">
                                                    <div class="badge badge-transparent badge-pill px-3 py-2">@bookmark.Service.Category.CategoryName</div><a class="card-fav-icon position-relative z-index-40" href="javascript: void();">
                                                        <svg class="svg-icon text-white">
                                                            <use xlink:href="#heart-1"> </use>
                                                        </svg>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <p class="text-sm text-muted mb-3">@bookmark.Service.AddressLine</p>
                                                <p class="text-sm text-muted mb-3">@bookmark.Service.PhoneNumber</p>
                                                <p class="text-sm text-muted text-uppercase mb-1">By <a href="#" class="text-dark"></a></p>
                                                <p class="text-sm mb-0">
                                                    <a class="mr-1" href="#">@bookmark.Service.Category.CategoryName,</a><a class="mr-1" href="#">Contemporary</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>}
                                                }


                    </div>
                </div>

            </div>
        </div>
    </div>
</section>