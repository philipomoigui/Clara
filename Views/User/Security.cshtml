@model UserSecurityViewModel
@{ 
    Layout = "_PagesLayout";
    var message = TempData["SuccessMessage"] ?? string.Empty;
    var DatePasswordChanged = Model.RelativeDateChange ?? "- not yet updated";
}


<section class="py-5">
    <div class="container">
        <!-- Breadcrumbs -->
        <ol class="breadcrumb pl-0  justify-content-start">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Account" asp-controller="User">Account</a></li>
            <li class="breadcrumb-item active">Security   </li>
        </ol>
        <h1 class="hero-heading mb-0">Login &amp; security</h1>
        <p class="text-muted mb-5">Manage your Login & security and settings here.</p>
        <div class="row">
            <div class="col-lg-7">
                <div class="text-block">
                    <h3 class="mb-4">Login</h3>
                    <div class="row">
                        <div class="col-sm-8">
                            <h6>Password</h6>
                            <p class="text-sm text-muted">Last updated @DatePasswordChanged</p>
                        </div>
                        <div class="col text-right">
                            <button class="btn btn-link pl-0 text-primary collapsed" type="button" data-toggle="collapse" data-target="#updatePassword" aria-expanded="false" aria-controls="updatePassword">Update</button>
                        </div>
                    </div>
                    <div class="collapse" id="updatePassword">
                        <form asp-action="Security" asp-controller="User" method="post">
                            <div class="row mt-4">
                                <div class="form-group col-12">
                                    <label class="form-label" asp-for="CurrentPassword">Current Password</label>
                                    <input class="form-control" type="password" asp-for="CurrentPassword" id="password-current">
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label" asp-for="NewPassword">New Password</label>
                                    <input class="form-control" type="password" asp-for="NewPassword" id="password-new">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                                    <input class="form-control" type="password" asp-for="ConfirmPassword" id="password-confirm">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <button class="btn btn-outline-primary" type="submit">Update Password</button>
                        </form>
                    </div>
                </div>
                <div class="text-block">
                    <h3 class="mb-4">Social accounts</h3>
                    <div class="row">
                        <div class="col-sm-8">
                            <h6>Facebook</h6>
                            <p class="text-sm text-muted">Not connected</p>
                        </div>
                        <div class="col text-right"><a class="btn btn-text text-primary pl-0" href="#">Connect</a></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8">
                            <h6>Google</h6>
                            <p class="text-sm">Connected</p>
                        </div>
                        <div class="col text-right"><a class="btn btn-text text-primary pl-0" href="#">Disconnect</a></div>
                    </div>
                </div>
                <div class="text-block mb-5 mb-lg-0">
                    <h3 class="mb-4">Device history</h3>
                    <div class="media">
                        <div class="icon-rounded bg-secondary-light">
                            <svg class="svg-icon text-secondary w-2rem h-2rem">
                                <use xlink:href="#imac-screen-1"> </use>
                            </svg>
                        </div>
                        <div class="media-body pt-2 ml-3">
                            <strong>Windows 10.0 </strong>· Chrome
                            <div class="badge badge-secondary-light text-uppercase">Current  Session</div>
                            <p class="text-sm text-muted">Ostrava, Moravskoslezsky kraj · April 6, 2020 at 01:51pm</p><a class="btn btn-text text-primary pl-0" href="#">Log out device</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 ml-lg-auto">
                <div class="card border-0 shadow">
                    <div class="card-header bg-primary-light py-4 border-0">
                        <div class="media align-items-center">
                            <div class="media-body">
                                <h4 class="h6 subtitle text-sm text-primary">Let's make your account more secure</h4>
                            </div>
                            <svg class="svg-icon svg-icon svg-icon-light w-3rem h-3rem ml-3 text-primary">
                                <use xlink:href="#shield-security-1"> </use>
                            </svg>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <h6 class="card-text">Your account security: </h6>
                        <p class="card-text mb-4"><span class="badge badge-info-light">Medium</span></p>
                        <p class="text-muted card-text">We’re always working on ways to increase safety in our community. </p>
                        <p class="text-muted card-text">That’s why we look at every account to make sure it’s as secure as possible.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<script>
    var message = "@message";
    if (message) {
        alert(message);
    }
</script>
}