@model ServicesViewModel
@{
    Layout = "_PagesLayout";
}

<div class="container-fluid py-5 px-lg-5">
    <div class="row border-bottom mb-4">
        <div class="col-12">
            <h1 class="display-4 font-weight-bold text-serif mb-4">Eat in Manhattan, NY</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 pt-3">
            <form class="pr-xl-3" action="#">
                <div class="mb-4">
                    <label class="form-label" for="form_search">Keyword</label>
                    <div class="input-label-absolute input-label-absolute-right">
                        <div class="label-absolute"><i class="fa fa-search"></i></div>
                        <input class="form-control pr-4" type="search" name="search" placeholder="Keywords" id="form_search">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="form_neighbourhood">Neighbourhood</label>
                    <select class="selectpicker form-control" name="neighbourhood" id="form_neighbourhood" multiple data-style="btn-selectpicker" data-live-search="true" data-selected-text-format="count &gt; 1" title="">
                        <option value="neighbourhood_0">Ajah</option>
                        <option value="neighbourhood_1">Ikeja</option>
                        <option value="neighbourhood_41">Ibadan</option>
                    </select>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="form_category">Category</label>
                    <select class="selectpicker form-control" name="category" id="form_category" multiple data-style="btn-selectpicker" data-selected-text-format="count &gt; 1" title="">
                        <option value="category_0">Hipster    </option>
                    </select>
                </div>
                <div class="mb-4">
                    <label class="form-label">Tag</label>
                    <ul class="list-unstyled mb-0">
                        <li>
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="type_0" name="type[]">
                                <label class="custom-control-label" for="type_0">Hipster</label>
                            </div>
                        </li>
                        <li>
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="type_1" name="type[]">
                                <label class="custom-control-label" for="type_1">Music club</label>
                            </div>
                        </li>
                        <li>
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="type_2" name="type[]">
                                <label class="custom-control-label" for="type_2">Bar</label>
                            </div>
                        </li>
                        <li>
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="type_3" name="type[]">
                                <label class="custom-control-label" for="type_3">Pub</label>
                            </div>
                        </li>
                        <li>
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="type_4" name="type[]">
                                <label class="custom-control-label" for="type_4">Deli</label>
                            </div>
                        </li>
                        <li>
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="type_5" name="type[]">
                                <label class="custom-control-label" for="type_5">Bistro</label>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="pb-4">
                    <div class="collapse" id="moreFilters">
                        <div class="mb-4">
                            <label class="form-label">Cuisine</label>
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="cuisine_0" name="cuisine[]">
                                        <label class="custom-control-label" for="cuisine_0">Fusion</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="cuisine_1" name="cuisine[]">
                                        <label class="custom-control-label" for="cuisine_1">Indian</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="cuisine_2" name="cuisine[]">
                                        <label class="custom-control-label" for="cuisine_2">French</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="cuisine_3" name="cuisine[]">
                                        <label class="custom-control-label" for="cuisine_3">American</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="cuisine_4" name="cuisine[]">
                                        <label class="custom-control-label" for="cuisine_4">Mexican</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="cuisine_5" name="cuisine[]">
                                        <label class="custom-control-label" for="cuisine_5">Other</label>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Price</label>
                            <div class="text-primary" id="slider-snap"></div>
                            <div class="nouislider-values">
                                <div class="min">From $<span id="slider-snap-value-from"></span></div>
                                <div class="max">To $<span id="slider-snap-value-to"></span></div>
                            </div>
                            <input type="hidden" name="pricefrom" id="slider-snap-input-from" value="40">
                            <input type="hidden" name="priceto" id="slider-snap-input-to" value="110">
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Vegetarians</label>
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input" type="radio" id="vegetarians_0" name="vegetarians">
                                        <label class="custom-control-label" for="vegetarians_0">All</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input" type="radio" id="vegetarians_1" name="vegetarians">
                                        <label class="custom-control-label" for="vegetarians_1">Vegetarian only</label>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="mb-4">
                        <button class="btn btn-link btn-collapse pl-0 text-secondary" type="button" data-toggle="collapse" data-target="#moreFilters" aria-expanded="false" aria-controls="moreFilters" data-expanded-text="Less filters" data-collapsed-text="More filters">More filters</button>
                    </div>
                    <div class="mb-4">
                        <button class="btn btn-primary" type="submit"> <i class="fas fa-filter mr-1"></i>Filter                </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center flex-column flex-md-row mb-4">
                <div class="mr-3">
                    <p class="mb-3 mb-md-0"><strong>@Model.Services.Count</strong> results found</p>
                </div>
                <div>
                    <label class="form-label mr-2" for="form_sort">Sort by</label>
                    <select class="selectpicker" name="sort" id="form_sort" data-style="btn-selectpicker" title="">
                        <option value="sortBy_0">Most popular   </option>
                        <option value="sortBy_1">Recommended   </option>
                        <option value="sortBy_2">Newest   </option>
                        <option value="sortBy_3">Oldest   </option>
                        <option value="sortBy_4">Closest   </option>
                    </select>
                </div>
            </div>
            <div class="row">
                @foreach (var service in Model.Services)
                {
                    <!-- venue item-->
                    <div class="col-sm-6 col-xl-4 mb-5 hover-animate" data-marker-id="59c0c8e33b1527bfe2abaf92">
                        <div class="card h-100 border-0 shadow">
                            <div class="card-img-top overflow-hidden dark-overlay bg-cover" style="background-image: url(../../../d19m59y37dris4.cloudfront.net/directory/1-5/img/photo/restaurant-1430931071372-38127bd472b8.jpg); min-height: 200px;">
                                <a class="tile-link" asp-action="Details" asp-controller="Service" asp-route-serviceId="@service.ServiceId" asp-route-categoryId="@service.CategoryId"></a>
                                <div class="card-img-overlay-bottom z-index-20">
                                    <h4 class="text-white text-shadow">@service.BusinessName</h4>
                                    <p class="mb-2 text-xs">
                                        <i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-gray-300">                    </i>
                                    </p>
                                </div>
                                <div class="card-img-overlay-top d-flex justify-content-between align-items-center">
                                    <div class="badge badge-transparent badge-pill px-3 py-2">@service.Category.CategoryName</div><a class="card-fav-icon position-relative z-index-40" href="javascript: void();">
                                        <svg class="svg-icon text-white">
                                            <use xlink:href="#heart-1"> </use>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                            <div class="card-body">
                                <p class="text-sm text-muted mb-3">@service.AddressLine</p>
                                <p class="text-sm text-muted mb-3">@service.PhoneNumber</p>
                                <p class="text-sm text-muted text-uppercase mb-1">By <a href="#" class="text-dark">Matt Damon</a></p>
                                <p class="text-sm mb-0">
                                    <a class="mr-1" href="#">@service.Category.CategoryName,</a><a class="mr-1" href="#">Contemporary</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <!--Pagination-->
            <nav aria-label="Page navigation example">
                <ul class="pagination pagination-template d-flex justify-content-center">
                    <li class="page-item"><a class="page-link" href="#"> <i class="fa fa-angle-left"></i></a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#"> <i class="fa fa-angle-right"></i></a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>