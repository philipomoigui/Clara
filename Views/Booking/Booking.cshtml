
@{
    Layout = "_PagesLayout";

}
<div class="text-center mt-4">
    <h2>Booking Form</h2>
    <p>Please fill the below form accurately to enable us serve you better!</p>
</div>

<div class="container bg mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 mr-lg-3">
            <form method="post" asp-action="Register" asp-controller="Account">
                @*<h3 class="text-center">Welcome!</h3>*@
                <div class="row">
                    <div class="form-group col-lg-6 col-sm-12">
                        <label>First Name</label>
                        <input type="text" class="form-control">
                        <span></span>
                    </div>
                    <div class="form-group col-lg-6 col-sm-12">
                        <label>Last Name</label>
                        <input type="text" class="form-control">
                        <span></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-lg-6 col-sm-12">
                        <label>Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        <span></span>
                    </div>
                    <div class="form-group col-lg-6 col-sm-12">
                        <label>Phone Number</label>
                        <input type="text" class="form-control">
                        <span></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-sm-12">
                        <label>Expected Guests</label>
                        <input type="text" class="form-control">
                        <span></span>
                    </div>
                    <div class="form-group col-lg-6 col-sm-12">
                        <label>Reservation</label>
                        <input type="datetime-local" class="form-control">
                        <span></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label" for="review">Additional Details for the Owner</label>
                    <textarea class="form-control" rows="3" name="review" id="review" placeholder="Tell us a little about your event" required="required"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block" style="background-color:#7a421b !important">Book Now</button>
            </form>
        </div>
        <div class="col-lg-4 justify-content-center align-items-center d-lg-none mt-7 ml-3">

            <img src="~/img/undraw_informed_decision_p2lh.svg" class="img-fluid rounded d-lg-block d-sm-none" alt="Alternate Text" />
        </div>
    </div>
</div>